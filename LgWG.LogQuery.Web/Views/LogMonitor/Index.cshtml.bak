
@{
    ViewBag.Title = "系统监控";
}

@section scripts{
    <script type='text/javascript'>
        $(function () {
            //var chatHub = $.connection.myChatHub; //get a reference to the hub
            //chatHub.client.getMessage = function (message) { //register for incoming messages
            //    console.log('received message: ' + message);
            //    $('#hubTestLabel').text(message);
            //};
            //abp.event.on('abp.signalr.connected', function() { //register for connect event
            //    chatHub.server.sendMessage("Hi everybody, I'm connected to the chat!" + new Date()); //send a message to the server
            //});


            var ticker = $.connection.lineProductTickerMini; //[HubName("lineProductTickerMini")] 属性值
            ticker.client.updateProductNumMul = function (lineProducts) {   //每次更新多条记录
           // chatHub.server.getAllLineProducts();
                $.each(lineProducts, function () {
                    var lineProduct = formatLineProduct(this);
                    $('#hubTestLabel').text(this.num1);
                });
            }
        });

        function formatLineProduct(lineProduct) {
            return lineProduct;
        }
    </script>

}



<div style="margin-bottom:90px">
</div>

<div class="row clearfix">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="webSiteDiv">
        <div class="info-box bg-pink hover-expand-effect">
            <div class="icon">
                <i class="material-icons">playlist_add_check</i>
            </div>
            <div class="content">
                <div class="text">网站个数</div>
                @*<div class="number count-to" data-from="0" data-to="125" data-speed="1000" data-fresh-interval="20">0/10</div>*@
                <div class="number"> <span id="webExSpan">0</span> / <span id="webAllSpan">5</span></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="serverDiv">
        <div class="info-box bg-cyan hover-expand-effect">
            <div class="icon">
                <i class="material-icons">help</i>
            </div>
            <div class="content">
                <div class="text">服务器台数</div>
                <div class="number">  <span id="serverExSpan">0</span> / <span id="serverAllSpan">6</span> </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="dayLogDiv">
        <div class="info-box bg-light-green hover-expand-effect">
            <div class="icon">
                <i class="material-icons">forum</i>
            </div>
            <div class="content">
                <div class="text">今日新增日志</div>
                <div class="number"> <span id="dayLogExSpan">0</span> / <span id="dayLogAllSpan">1892</span> </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="info-box bg-orange hover-expand-effect">
            <div class="icon">
                <i class="material-icons">watch_later</i>
            </div>
            <div class="content">
                <div class="text">更新时间</div>
                <div class="number">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</div>
            </div>
        </div>
    </div>
</div>

<div style="margin-left:400px">
    <label style="font-size:40px;font-weight:600;color:red;" id="hubTestLabel"></label>
</div>
